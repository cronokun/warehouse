<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, placeholder: "Product name", class: "long" %>
  </div>
  <div class="field">
    <%= f.label :product_number %>
    <%= f.text_field :product_number, placeholder: "ABC 123400-4567-89", class: "long" %>
  </div>

  <div class="field-group">
    <div class="field">
      <%= f.label :width %>
      <%= f.number_field :width, placeholder: "in millimeters", class: "short" %>
    </div>
    <div class="field">
      <%= f.label :height %>
      <%= f.number_field :height, placeholder: "in millimeters", class: "short" %>
    </div>
    <div class="field">
      <%= f.label :depth %>
      <%= f.number_field :depth, placeholder: "in millimeters", class: "short" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :weight %>
    <%= f.number_field :weight, placeholder: "in grams", class: "short" %>
  </div>
  <div class="field">
    <%= f.label :stock_level %>
    <%= f.number_field :stock_level %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
